{
    "include": ["lib/**/*"],
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowJs": true,
        "target": "es2016",
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "declaration": true,
        "skipLibCheck": true,
        "noImplicitThis": true
    }
}